---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style>
      /* Modern Design System */
      :root {
        --color-primary: #2563eb;
        --color-primary-dark: #1d4ed8;
        --color-text: #1f2937;
        --color-text-light: #6b7280;
        --color-background: #ffffff;
        --color-background-alt: #f9fafb;
        --color-border: #e5e7eb;
        --color-accent: #8b5cf6;
        --font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        --line-height: 1.75;
        --transition: 0.2s ease;
      }

      @media (prefers-color-scheme: dark) {
        :root {
          --color-text: #f3f4f6;
          --color-text-light: #9ca3af;
          --color-background: #111827;
          --color-background-alt: #1f2937;
          --color-border: #374151;
        }
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      html {
        scroll-behavior: smooth;
      }

      body {
        font-family: var(--font-family);
        color: var(--color-text);
        background: var(--color-background);
        line-height: var(--line-height);
        font-size: 16px;
      }

      a {
        color: var(--color-primary);
        text-decoration: none;
        transition: color var(--transition);
      }

      a:hover {
        color: var(--color-primary-dark);
        text-decoration: underline;
      }

      h1, h2, h3, h4, h5, h6 {
        font-weight: 700;
        line-height: 1.25;
        margin-bottom: 0.75em;
        color: var(--color-text);
      }

      h1 { font-size: 2.5rem; }
      h2 { font-size: 2rem; }
      h3 { font-size: 1.5rem; }
      h4 { font-size: 1.25rem; }

      /* Container */
      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
      }

      /* Header */
      header {
        background: var(--color-background);
        border-bottom: 1px solid var(--color-border);
        position: sticky;
        top: 0;
        z-index: 100;
        backdrop-filter: blur(10px);
        background: rgba(255, 255, 255, 0.9);
      }

      @media (prefers-color-scheme: dark) {
        header {
          background: rgba(17, 24, 39, 0.9);
        }
      }

      .header-content {
        padding: 1.5rem 0;
        display: flex;
        align-items: center;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 1rem;
      }

      .site-title {
        font-size: 1.75rem;
        font-weight: 800;
        background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .site-title a:hover {
        text-decoration: none;
      }

      .site-description {
        color: var(--color-text-light);
        font-size: 0.95rem;
        margin-top: 0.25rem;
      }

      /* Navigation */
      nav {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
      }

      nav a {
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        color: var(--color-text-light);
        font-weight: 500;
        transition: all var(--transition);
      }

      nav a:hover,
      nav a.active {
        color: var(--color-primary);
        background: var(--color-background-alt);
        text-decoration: none;
      }

      /* Main Layout */
      .main-layout {
        padding: 3rem 0;
      }

      /* Posts */
      .post {
        margin-bottom: 3rem;
        padding-bottom: 3rem;
        border-bottom: 1px solid var(--color-border);
      }

      .post:last-child {
        border-bottom: none;
        margin-bottom: 0;
        padding-bottom: 0;
      }

      .post-title {
        font-size: 1.75rem;
        margin-bottom: 0.5rem;
      }

      .post-title a {
        color: var(--color-text);
      }

      .post-title a:hover {
        color: var(--color-primary);
        text-decoration: none;
      }

      .post-meta {
        color: var(--color-text-light);
        font-size: 0.9rem;
        margin-bottom: 1rem;
      }

      .post-body {
        font-size: 1.05rem;
        line-height: 1.8;
      }

      .post-body p {
        margin-bottom: 1.25rem;
      }

      /* Global responsive images */
      img {
        max-width: 100%;
        height: auto;
      }

      .post-body img {
        border-radius: 0.75rem;
        margin: 1.5rem 0;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
      }

      /* Footer */
      footer {
        background: var(--color-background-alt);
        border-top: 1px solid var(--color-border);
        padding: 3rem 0;
        margin-top: 3rem;
      }

      .footer-content {
        text-align: center;
        color: var(--color-text-light);
      }

      /* Mobile menu toggle */
      .mobile-menu-btn {
        display: none;
        background: none;
        border: none;
        font-size: 1.5rem;
        cursor: pointer;
        color: var(--color-text);
      }

      @media (max-width: 768px) {
        .mobile-menu-btn {
          display: block;
        }

        nav {
          display: none;
          width: 100%;
          flex-direction: column;
        }

        nav.open {
          display: flex;
        }
      }
    </style>
  </head>
  <body>
    <header>
      <div class="container">
        <div class="header-content">
          <div>
            <h1 class="site-title">
              <a href="/">Nine Transitions</a>
            </h1>
            <p class="site-description">Price Action trading on the Emini</p>
          </div>
          <button class="mobile-menu-btn" onclick="document.querySelector('nav').classList.toggle('open')">â˜°</button>
          <nav>
            <a href="/" class={Astro.url.pathname === '/' ? 'active' : ''}>Home</a>
            <a href="/trading-guide/" class={Astro.url.pathname === '/trading-guide/' ? 'active' : ''}>Trading Guide</a>
            <a href="/setup-chart/" class={Astro.url.pathname === '/setup-chart/' ? 'active' : ''}>Setup Chart</a>
            <a href="/price-action-trading/" class={Astro.url.pathname === '/price-action-trading/' ? 'active' : ''}>Price Action Trading</a>
            <a href="/glossary/" class={Astro.url.pathname === '/glossary/' ? 'active' : ''}>Glossary</a>
          </nav>
        </div>
      </div>
    </header>

    <main class="container">
      <div class="main-layout">
        <article>
          <slot />
        </article>
      </div>
    </main>

    <footer>
      <div class="container">
        <div class="footer-content">
          <p>&copy; {new Date().getFullYear()} Nine Transitions. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>
